def get_coordinates(self, line):
    """Extract coordinates from a line.
    
    Args:
        line (str): Line to process
        
    Returns:
        tuple or None: (lat, long) as floats or None if not found
    """
    match = re.search(r'coordinates\s*=\s*([\d\.]+)[,\s]+([\d\.]+)', line)
    if match:
        return float(match.group(1)), float(match.group(2))
    return None

def get_area(self, line):
    """Extract area value from a line.
    
    Args:
        line (str): Line to process
        
    Returns:
        float or None: Area in square kilometers or None if not found
    """
    match = re.search(r'area\s*=\s*([\d\.]+)', line)
    if match:
        return float(match.group(1))
    return None
